# Reverse Proxy configuration
events {
}
# Local development domain
http {
    
    include /etc/nginx/mime.types;

    # LMS
    server {
        listen 80;
        server_name lms.local.bombano.com;

        location / {
            proxy_pass http://moodle:80; # Moodle service on port 81
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header Host $http_host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # CMS
    server {
        listen 80;
        server_name cms.local.bombano.com; # Replace with your domain

        location / {
            proxy_pass http://wordpress:80; # WordPress service on port 80
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header Host $http_host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # Static Site
    server {
        listen 80;
        server_name local.bombano.com;
        
        rewrite ^(/.*)\.html(\?.*)?$ $1$2 permanent;
        rewrite ^/(.*)/$ /$1 permanent;

        root /usr/share/nginx/html/static_site;

        index index.html index.htm;

        location / {
            try_files $uri/index.html $uri.html $uri/ $uri =404;
        }

        location ~* \.(css|gif|ico|jpeg|jpg|js|png)$ {
            expires max;
            log_not_found off;
        }

        location = /robots.txt { log_not_found off; access_log off; allow all; }
    }

}